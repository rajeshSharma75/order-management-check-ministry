{
  "name": "order-management-system",
  "version": "1.0.0",
  "description": "E-commerce Order Management System with Node.js, React, PostgreSQL",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "build": "echo 'Backend only - no build needed'",
    "start": "node backend/server.js",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "db:migrate": "node backend/database/migrate.js",
    "db:seed": "node backend/database/seed.js",
    "db:setup": "npm run db:migrate && npm run db:seed"
  },
  "keywords": [
    "order-management",
    "ecommerce",
    "nodejs",
    "react",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.11"
  }
}
